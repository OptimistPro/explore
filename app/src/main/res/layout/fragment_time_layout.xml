<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8D6EB"
    tools:context=".time_layout" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttom_block"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="4dp"
                android:background="#F8F8F8">

                <ImageButton
                    android:id="@+id/image_time_buttom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/video_buttom_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_2"
                    app:layout_constraintEnd_toStartOf="@+id/document_buttom_time"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/image_time_buttom"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/document_buttom_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_3"
                    app:layout_constraintEnd_toStartOf="@+id/myzik_buttom_time"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/video_buttom_time"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/myzik_buttom_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/apk_buttom_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <ImageButton
                    android:id="@+id/dowload_forder_buttom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_6"
                    app:layout_constraintEnd_toStartOf="@+id/zip_bottum_time"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/apk_buttom_time"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <ImageButton
                    android:id="@+id/zip_bottum_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_7"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton15"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/dowload_forder_buttom"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <ImageButton
                    android:id="@+id/imageButton15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/icon_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:text="Фото"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_time_buttom" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:text="Видео"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toStartOf="@+id/textView6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/video_buttom_time" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:text="Документы"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toStartOf="@+id/textView7"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/document_buttom_time" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="8dp"
                    android:text="Музыка"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myzik_buttom_time" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="8dp"
                    android:text="APK"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/apk_buttom_time" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:text="Загрузки"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toStartOf="@+id/textView14"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/dowload_forder_buttom" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:text="Архивы"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toStartOf="@+id/textView13"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView15"
                    app:layout_constraintTop_toBottomOf="@+id/zip_bottum_time" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="72dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="8dp"
                    android:text="Разное"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton15" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/timeBlockList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>